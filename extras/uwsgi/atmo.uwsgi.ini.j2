[uwsgi]
check-static = {{ PATH_TO_ATMOSPHERE }}
chdir = {{ PATH_TO_ATMOSPHERE }}
home = {{ VIRTUALENV_PATH }}
module = atmosphere.wsgi:application
env = DJANGO_SETTINGS_MODULE=atmosphere.settings
master = true
socket = /tmp/atmosphere.sock
thunder-lock = true
enable-threads = true
processes = {{ NUM_PROCESSES }}
uid = {{ UWSGI_USER }}
gid = {{ UWSGI_GROUP }}
buffer-size = 8192
{% if LOCAL_DEV -%}
chmod-socket = 776
{% endif -%}
vacuum = true
max-requests = 10
daemonize = {{ UWSGI_LOG_PATH }}
